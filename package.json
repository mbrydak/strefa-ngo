  "workspaces": [
    "apps/*",
    "development/*",
    "packages/*"
  ],
  "scripts": {
    "dev:client": "cd apps/client && yarn run dev",
    "dev:server": "cd apps/server && yarn run dev",
    "test": "lerna run test --parallel",
    "lint:check": "lerna run lint:check --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "typecheck": "lerna run typecheck --parallel",
    "bootstrap": "lerna bootstrap",
    "cleanup": "yarn cache clean && lerna clean -y && rimraf node_modules"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.56",
