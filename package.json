{
  "name": "strefa-ngo",
  "private": true,
  "author": "CodersCrew",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "development/*",
    "shared/*"
  ],
  "scripts": {
    "showtime": "lerna run dev --parallel",
    "test": "lerna run test --parallel",
    "test:changed": "lerna run test:changed --parallel",
    "test:cov": "lerna run test:cov --parallel",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "lint:changed": "lerna run lint:changed --parallel",
    "typecheck": "lerna run typecheck --parallel",
    "check-updates": "lerna run check-updates --parallel",
    "bootstrap": "lerna bootstrap && lerna run generate",
    "cleanup": "yarn cache clean && lerna clean -y && node scripts/cleanup.js"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn typecheck && yarn lint:changed && yarn test:changed"
    }
  },
  "devDependencies": {
    "@emotion/jest": "11.2.0",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@testing-library/user-event": "12.7.0",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.27",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "4.15.0",
    "eslint": "7.19.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-config-react": "1.1.7",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-jest-dom": "3.6.5",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-testing-library": "3.10.1",
    "husky": "5.0.9",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "npm-check-updates": "11.1.1",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "serve": "11.3.2",
    "ts-jest": "26.5.1",
    "typescript": "4.1.5"
  }
}
