{
  "name": "@sn/client",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next",
    "start": "next start",
    "prebuild": "rimraf .next",
    "build": "next build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:changed": "jest --findRelatedTests $(git diff --name-only --relative=\"apps/client\" --diff-filter=ACMRTUXB $ORIGIN | grep  -E \"(.js$|.ts$|.tsx$)\") --passWithNoTests CI=true",
    "lint:check": "eslint \"src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
    "lint:changed": "eslint $(git diff --name-only --relative=\"apps/client\" --diff-filter=ACMRTUXB $ORIGIN | grep  -E \"(.js$|.ts$|.tsx$)\")",
    "typecheck": "tsc --noEmit",
    "check-updates": "ncu"
  },
  "dependencies": {
    "@sn/ui-kit": "0.0.1",
    "next": "^10.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.0.0",
    "@sn/config": "0.0.1",
    "next-transpile-modules": "^5.0.0"
  }
}
