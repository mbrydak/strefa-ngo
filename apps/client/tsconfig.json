{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "paths": {
      "@/api/*": ["api/*"],
      "@/constants": ["constants"],
      "@/types": ["types"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "next-env.d.ts"]
}
